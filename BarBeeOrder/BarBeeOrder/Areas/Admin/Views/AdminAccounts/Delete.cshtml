@model BarBeeOrder.Models.Customer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}






<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" class="breadcrumb-item">Danh sách tài khoản</a>
            <span class="breadcrumb-item active">Xác nhận xóa tài khoản</span>
        </nav>
    </div>
</div>

<h3>Bạn có chắc chắn muốn xóa tài khoản này?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin tài khoản</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.CustomerId</td>
                    </tr>
                    <tr>
                        <td>Họ và tên:</td>
                        <td>@Model.Fullname</td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Lần đăng nhập cuối:</td>
                        <td>@Model.LastLogin</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo:</td>
                        <td>@Model.CreatedDate</td>
                    </tr>
                    <tr>
                        <td>Quyền truy cập:</td>
                        <td>@Model.Role.RoleName</td>
                    </tr
                    <tr>
                        <td>Xác nhận xóa:</td>
                        <td>
                            <form asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@Model.CustomerId">
                                <input type="hidden" asp-for="CustomerId" />
                                <input type="submit" value="Xác nhận xóa" class="btn btn-danger" /> 
                             </form>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
