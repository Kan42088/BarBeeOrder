@model BarBeeOrder.Models.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminPosts" asp-action="Index" class="breadcrumb-item">Danh sách bài đăng</a>
            <span class="breadcrumb-item active">Xóa bài đăng</span>
        </nav>
    </div>
</div>
<h3>Bạn chắc chắn muốn xóa bài đăng này?</h3>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin bài đăng </h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.PostId</td>
                    </tr>
                    <tr>
                        <td>Tiêu đề:</td>
                        <td>@Model.Tittle</td>
                    </tr>
                    <tr>
                        <td>Tác giả:</td>
                        <td>@Model.Account.Fullname</td>
                    </tr>
                    <tr>
                        <td>Ngày đăng:</td>
                        <td>@Model.CreatedDate</td>
                    </tr>
                    <tr>
                        <td>Xác nhận xóa:</td>
                        <td>
                            <form asp-area="Admin" asp-controller="AdminPosts" asp-action="Delete">
                                <input type="hidden" asp-for="PostId" />
                                <input type="submit" value="Xóa" class="btn btn-danger" />

                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



