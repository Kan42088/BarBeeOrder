@model BarBeeOrder.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminPostCategories" asp-action="Index" class="breadcrumb-item">Quản lí danh mục bài đăng</a>
            <span class="breadcrumb-item active">Xóa danh mục bài đăng </span>
        </nav>
    </div>
</div>


<h3>Bạn chắc chắn muốn xóa danh mục chứ?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin danh mục</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>Tên:</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Ảnh đại diện:</td>
                        <td>
                            <img width="200" height="200" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
                        </td>
                    </tr>

                    <tr>
                        <td>Xóa danh mục</td>
                        <td>
                            <form asp-controller="AdminPostCategories" asp-action="Delete" asp-route-id="@Model.CategoryId">
                                <input type="hidden" asp-for="CategoryId" />
                                <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

