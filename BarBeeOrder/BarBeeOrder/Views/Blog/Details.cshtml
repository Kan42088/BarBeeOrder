@model BarBeeOrder.Models.Post

@{
    ViewData["Title"] = Model.Tittle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/tin-tuc/{Model.Alias}-{Model.PostId}.html";
}

        <main class="main-content">
            <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1920x373.jpg">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-lg-12">
                            <div class="breadcrumb-item">
                                <h1 class="breadcrumb-heading">@Model.Tittle</h1>
                                <ul>
                                    <li>
                                        <a href="/">Trang chủ<i class="pe-7s-angle-right"></i></a>
                                    </li>
                                    <li>
                                        <a asp-action="Index" asp-controller="Blog">Tin tức<i class="pe-7s-angle-right"></i></a>
                                    </li>
                                    <li>Nội dung bài viết</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="blog-area section-space-y-axis-100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog-detail-item">
                                <div class="blog-img">
                                    <img class="img-full" src="~/images/posts/@Model.Thumb" alt="@Model.Tittle">
                                </div>
                                <div class="blog-content text-start pb-0">
                                    <div class="blog-meta text-dim-gray pb-3">
                                        <ul>
                                            <li class="date"><i class="fa fa-calendar-o me-2"></i>@Model.CreatedDate.Value.ToShortDateString()</li>
                                            <li>
                                                <span class="comments me-3">
                                                <a href="javascript:void(0)">2 Comments</a>
                                            </span>
                                                <span class="link-share">
                                                <a href="javascript:void(0)">Share</a>
                                            </span>
                                            </li>
                                        </ul>
                                    </div>
                                    <h5 class="title mb-4">
                                        <a href="@url">@Model.Tittle</a>
                                    </h5>
                                    <blockquote class="pt-6 pb-5 mb-5">
                                        <div class="inner-content">
                                            <p class="mb-0">
                                                @Model.ShortContent
                                            </p>
                                        </div>
                                    </blockquote>
                                        @Html.Raw(Model.PostContent)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>