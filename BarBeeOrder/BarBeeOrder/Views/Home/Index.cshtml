@using BarBeeOrder.ModelView
@model BarBeeOrder.ModelView.HomeVM
@{
    ViewData["Title"] = "Trang chủ";
    var hv = Model;
    List<HomeProduct> homeProducts = Model.Products;
    List<Product> allProducts = ViewBag.AllProducts;
}

<!-- Begin Slider Area -->
