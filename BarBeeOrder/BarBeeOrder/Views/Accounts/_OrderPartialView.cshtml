@model List<BarBeeOrder.Models.Order>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model != null && Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>ORDER</th>
                    <th>Ngày mua</th>
                    <th>Ngày giao</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a class="account-order-id" href="javascript:void(0)">#@item.OrderId</a></td>
                        <td>@item.OrderDate</td>
                        <td>@item.ShipDate</td>
                        <td>@item.TransactionStatus.Status</td>
                        <td>@item.TotalMoney.ToString("#,##0") VND</td>
                        <td>
                            <a href="#" class="btn btn-secondary btn-primary-hover"><span>Xem đơn</span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>Bạn chưa có đơn hàng nào!</p>
    <a href="/cua-hang.html">Đến cửa hàng</a> <a> để chọn những sản phẩm ưng ý.</a>
}
